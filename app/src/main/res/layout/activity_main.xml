<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.louismun.fling.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="John Doe"
        android:layout_below="@+id/etOutgoing"
        android:layout_toRightOf="@+id/cbName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:id="@+id/etNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1(555)123-4567"
        android:inputType="phone"
        android:text="1(555)123-4567"
        android:layout_below="@+id/cbEmail"
        android:layout_toRightOf="@+id/cbNumber"
        android:layout_toEndOf="@+id/cbNumber" />

    <CheckBox
        android:id="@+id/cbName"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/etOutgoing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/cbEmail" />
    <CheckBox
        android:id="@+id/cbEmail"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/cbNumber" />
    <CheckBox
        android:id="@+id/cbNumber"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cbInstagram"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cbFacebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:layout_weight="1"
        android:layout_below="@+id/cbInstagram"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cbTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:layout_weight="1"
        android:layout_below="@+id/cbLinkedIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cbLinkedIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LinkedIn"
        android:layout_weight="1"
        android:layout_below="@+id/etNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:id="@+id/etOutgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1(555)123-4567"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="johndoe@email.com"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook"
        android:layout_below="@+id/cbFacebook"
        android:layout_toLeftOf="@+id/imgInstagram"
        android:layout_toStartOf="@+id/imgInstagram"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imgInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/instagram"
        android:layout_below="@+id/cbFacebook"
        android:layout_toLeftOf="@+id/imgTwitter"
        android:layout_toStartOf="@+id/imgTwitter"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imgTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/twitter"
        android:layout_below="@+id/cbFacebook"
        android:layout_toLeftOf="@+id/imgLinkedIn"
        android:layout_toStartOf="@+id/imgLinkedIn"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imgLinkedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/linkedin"
        android:layout_below="@+id/cbFacebook"
        android:layout_toRightOf="@+id/btnSend"
        android:layout_toEndOf="@+id/btnSend"
        android:visibility="gone"/>
</RelativeLayout>
